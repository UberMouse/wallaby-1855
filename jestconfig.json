{
  "transform": {
    ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "snapshotSerializers": ["jest-html"],
  "testEnvironment": "jsdom",
  "roots":  [
    "<rootDir>/Scripts/react/"
  ],
  "testRegex": "(\\.|/)(test|spec)\\.(ts|tsx|js)$",
  "globals": {
    "window": {}
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ]
}
